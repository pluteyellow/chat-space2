.wrapper
  .side-bar
    .side-bar__chat--header
      .side-bar__chat--header-box
        %p.side-bar__username
          = current_user.name
        
        %ul.user-menu
          %li.user-menu__item
            =link_to "", class: "user-menu__item__link" do
              = fa_icon 'edit', class: "user-menu__item__edit"
          %li.user-menu__item
            =link_to edit_user_path(current_user), class: "user-menu__item__link" do
              = fa_icon 'gear', class: "user-menu__item__gear"

    .side-bar__message--groups
      .side-bar__message--groups-box
        %p.side-bar__groupname
          kkk
