    .content__header
      .content__header--box
        %p.content__chatgroup
          kkk

        %p.content__members
          members: fff mmm ggg ddd

      %p.edit-btn
        Edit

    .content__messages
      .content__messages--box
        .content__messages--box-upload-data
          %p.content__username
            toukousya
